<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Unit Type</title>
    <style>
body {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh; /* Full height of the window */
    margin: 0;
    background-color: #121212; /* Dark background */
    font-family: Arial, sans-serif; /* Modern font */
    transition: background-color 0.3s, color 0.3s; /* Transition for colors */
}

.container {
    background-color: #1e1e1e; /* Dark background for the form */
    padding: 20px; /* Inner padding */
    border-radius: 8px; /* Rounded corners */
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5); /* Shadow for depth */
    text-align: center; /* Center text */
    transition: background-color 0.3s, box-shadow 0.3s; /* Transition for colors */
}

h1 {
    margin-bottom: 20px; /* Space below title */
    color: #ffffff; /* White text for heading */
}

input[type="search"] {
    padding: 10px; /* Inner padding for input */
    width: 80%; /* Width of the input */
    border: 1px solid #555; /* Darker border */
    border-radius: 4px; /* Rounded corners */
    margin-bottom: 10px; /* Space below input */
    transition: border-color 0.3s; /* Transition for border */
    background-color: #333; /* Dark background for input */
    color: #f4f4f4; /* Light text for input */
}

button {
    padding: 10px 20px; /* Inner padding for button */
    background-color: #007BFF; /* Blue background */
    color: white; /* White text */
    border: none; /* No border */
    border-radius: 4px; /* Rounded corners */
    cursor: pointer; /* Pointer cursor on hover */
    transition: background-color 0.3s; /* Transition for hover */
}

button:hover {
    background-color: #0056b3; /* Darker color on hover */
}

/* Dark mode styles */
body.dark-mode {
    background-color: #181818; /* Dark background */
    color: #f4f4f4; /* Light text */
}

.container.dark-mode {
    background-color: #242424; /* Dark background for container */
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5); /* More pronounced shadow */
}

input[type="search"].dark-mode {
    border: 1px solid #777; /* Darker border */
    background-color: #333; /* Dark background for input */
    color: #f4f4f4; /* Light text for input */
}

.toggle-button {
    margin-bottom: 20px; /* Space below toggle button */
    padding: 10px 20px; /* Padding for toggle button */
    cursor: pointer; /* Pointer cursor */
    border: none; /* No border */
    border-radius: 4px; /* Rounded corners */
    background-color: #007BFF; /* Blue background */
    color: white; /* White text */
    transition: background-color 0.3s; /* Transition for hover */
}

.toggle-button:hover {
    background-color: #0056b3; /* Darker color on hover */
}

.login-button {
    margin-bottom: 20px; /* Space below login button */
    padding: 10px 20px; /* Padding for login button */
    cursor: pointer; /* Pointer cursor */
    border: none; /* No border */
    border-radius: 4px; /* Rounded corners */
    background-color: #28a745; /* Green background */
    color: white; /* White text */
    transition: background-color 0.3s; /* Transition for hover */
}

.login-button:hover {
    background-color: #218838; /* Darker color on hover */
}

    </style>
</head>

<body>
    <div class="container" id="container">
        <button class="toggle-button" id="toggleButton">Switch to Dark Mode</button>
        <a href="/auth/login"><button class="login-button">Login</button></a>
        <form action="/search" method="post">
            <h1>Start Search A Unit Type!</h1>
            <input type="search" placeholder="Energy" name="searched" required id="searchInput">
            <button type="submit">Search</button>

           
        </form>
    </div>

    <script>
        const toggleButton = document.getElementById('toggleButton');
        const container = document.getElementById('container');
        const searchInput = document.getElementById('searchInput');

        toggleButton.addEventListener('click', () => {
            // Comută clasele pentru dark mode
            document.body.classList.toggle('dark-mode');
            container.classList.toggle('dark-mode');
            searchInput.classList.toggle('dark-mode');
            toggleButton.classList.toggle('dark-mode');

            // Schimbă textul butonului în funcție de modul activ
            if (document.body.classList.contains('dark-mode')) {
                toggleButton.textContent = 'Switch to Light Mode';
            } else {
                toggleButton.textContent = 'Switch to Dark Mode';
            }
        });

        // Gestionarea afișării formularului extins
        const extendedForm = document.getElementById('extendedForm');
        const showExtendedFormButton = document.getElementById('showExtendedForm');
        const unitTypeSelect = document.getElementById('unitType');
        const derivedFields = document.querySelectorAll('.derived-fields');

        showExtendedFormButton.addEventListener('click', () => {
            extendedForm.classList.toggle('active');
        });

        unitTypeSelect.addEventListener('change', () => {
            if (unitTypeSelect.value === 'derived') {
                derivedFields.forEach(field => field.style.display = 'block');
            } else {
                derivedFields.forEach(field => field.style.display = 'none');
            }
        });
    </script>
</body>

</html>